<%= form_for @own do |f| %>
  <%= f.collection_select :person_id, Person.all, :id, :name, :prompt => "Select person" %><br />
  <%= f.collection_select :model_id, Model.all, :id, :name, :prompt => "Select disc model" %><br />
  <%= f.label :inventory %>
  <%= f.number_field :inventory, :within => 1...15, :size => 3, :maxlength => 2, :class => 'num' %><br />
  <br />
  <%= f.submit %>
<% end %>
